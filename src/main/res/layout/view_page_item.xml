<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.puerlink.imagepreview.LargeImageView
        android:id="@+id/image_scale_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.puerlink.imagepreview.LargeImageView>

    <com.puerlink.widgets.CircleProgressBar
        android:id="@+id/progressbar_load"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/image_load_failed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/imagepreview_img_desc"
        android:src="@drawable/imagepreview_icon_load_failed"/>

</RelativeLayout>
